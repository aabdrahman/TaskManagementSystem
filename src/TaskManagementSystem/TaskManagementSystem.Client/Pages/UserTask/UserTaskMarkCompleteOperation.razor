

@if(_userTask is not null)
{
    <div class="d-flex flex-column justify-content-center align-items-center w-100">
        <UserTaskDetails UserTask="_userTask" />

        @if(_isSuccessful && _responseMessage is not null)
        {
            <div class="alert alert-success d-flex align-items-center justify-content-center w-100 px-2 mt-2" role="alert">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-circle-fill" viewBox="0 0 16 16">
                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0m-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
                </svg>
                <div>
                    @_responseMessage
                </div>
            </div>
        }
        else if(!_isSuccessful && _responseMessage is not null)
        {

            <div class="alert alert-danger d-flex align-items-center justify-content-center w-100 px-2 mt-2" role="alert">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-exclamation-triangle-fill" viewBox="0 0 16 16">
                    <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5m.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2" />
                </svg>
                <div>
                    @_responseMessage
                </div>
            </div>
        }
        <div class="d-flex w-100 mt-1">
            <EditForm Enhance EditContext="_editContext" OnValidSubmit="OnHandleSubmit" class="w-100">
                <DataAnnotationsValidator />
                <div class="form-group flex-row justify-content-center align-items-center w-100 mb-1 px-2">
                    <label for="mark-complete-comment" class="form-label fw-bolder">Comment:</label>
                    <InputTextArea @bind-Value="_updateUserTaskCompleteStatus.Comment" class="form-control" id="mark-complete-comment" />
                    <ValidationMessage For="(() => _updateUserTaskCompleteStatus.Comment)" />
                </div>

                <div class="d-flex w-100 justify-content-@(_isLoading ? "end" : "between") mt-2">

                    @if (_isLoading)
                    {
                        <button class="btn btn-primary float-end" type="button" disabled>
                            <span class="spinner-border spinner-border-sm" aria-hidden="true"></span>
                            <span role="status">Loading...</span>
                        </button>
                    }
                    else
                    {
                        if(_responseMessage is null || (!_isSuccessful && _responseMessage is not null))
                        {
                            <button class="btn btn-outline-secondary float-start align-items-start" type="button" @onclick="OnHandleClose">Cancel</button>                            
                        }

                        if (_isSuccessful && _responseMessage is not null)
                        {
                            <button type="button" class="btn btn-secondary" @onclick="OnHandleClose">Close</button>
                        }
                        else
                        {
                            <button class="btn btn-primary" type="submit">Submit Action</button>
                        }

                    }
                </div>

            </EditForm>
        </div>

    </div>
}


@code {
    private TaskUserDto _userTask;
    private bool _isLoading = false;
    private bool _isSuccessful;
    private string _responseMessage;

    private Shared.DataTransferObjects.TaskUser.UpdateUserTaskCompleteStatusDto _updateUserTaskCompleteStatus;
    private EditContext _editContext;

    [Parameter, EditorRequired]
    public TaskUserDto UserTask { get; set; }

    [Parameter, EditorRequired]
    public EventCallback HandleClose { get; set; }

    protected override void OnParametersSet()
    {
        _userTask = UserTask;
        if(_userTask is not null)
        {
            _updateUserTaskCompleteStatus = new UpdateUserTaskCompleteStatusDto() { Id = _userTask.Id };
            _editContext = new EditContext(_updateUserTaskCompleteStatus);
        }
    }

    private async Task OnHandleSubmit()
    {
        _isLoading = true;
        // await Task.Delay(5000);
        // _isSuccessful = DateTime.Now.Second % 2 == 0;
        // _responseMessage = _isSuccessful ? "Success" : "Error";

        var markAsCompleteResponse = await markUserTaskAsCompleteHandler.Handle(_updateUserTaskCompleteStatus);

        _isSuccessful = markAsCompleteResponse.isSuccessful; _responseMessage = markAsCompleteResponse.responseMessage;

        _isLoading = false;
    }

    private async Task OnHandleClose()
    {
        _userTask = null;
        _isLoading = false;
        _isSuccessful = default;
        _responseMessage = null;
        await HandleClose.InvokeAsync();
    }

}
