@attribute [Authorize(Roles = "ADMIN,ITGOVERNANCE,BUSINESSANALYST,PRODUCTOWNER")]


@if(_taskUserToUpdate is null)
{
    <div class="no-trails" style="text-align:center;margin-top:10px; width:100%">
        <svg viewBox="0 0 16 16" class="bi bi-tree" fill="currentColor" xmlns="http://www.w3.org/2000/svg" style="width:25%;">
            <path fill-rule="evenodd" d="M8 0a.5.5 0 0 1 .416.223l3 4.5A.5.50 0 1 11 5.5h-.098l2.022 3.235a.5.5 0 0 1-.424.765h-.191l1.638 3.276a.5.50 0 1-.447.724h-11a.5.5 0 0 1-.447-.724L3.69 9.5H3.5a.5.5 0 01-.424-.765L5.098 5.5H5a.5.5 0 0 1-.416-.777l3-4.5A.5.5 0 0 1 8 0zM5.9344.5H6a.5.5 0 0 1 .424.765L4.402 8.5H4.5a.5.5 0 0 1 .447.724L3.3112.5h9.382l-1.638-3.276A.5.5 0 0 1 11.5 8.5h.098L9.576 5.265A.5.5 0 0 110 4.5h.066L8 1.401 5.934 4.5z" />
            <path d="M7 13.5h2V16H7v-2.5z" />
        </svg>
        <h3 class="text-muted fw-light">
            User Task could not be fetched.
        </h3>
    </div>
}

@if(_editContext is not null)
{
    <div class="d-flex flex-column w-100">
        @if (_responseMessage is not null && !_isLoading)
        {
            <div class="alert fst-italic text-center fs-6 fw-bold alert-@(_isSuccessful ? "success" : "danger")" role="alert">
                @(_isSuccessful ? $"{_responseMessage}" : _responseMessage)
            </div>
        }
        <EditForm EditContext="_editContext" OnValidSubmit="OnHandleSubmit" class="w-100">
            <div class="d-flex flex-column gap-2">
                <div class="d-flex flex-column gap-1">
                    <label class="form-label fw-bold">Assigned User</label>
                    <span class="text-dark fs-5">@_taskUserToUpdate?.AssignedUser</span>
                </div>
                <div class="d-flex flex-column gap-1">
                    <label class="form-label fw-bold">Task ID</label>
                    <span class="text-dark fs-5">@_taskUserToUpdate?.TaskId</span>
                </div>
                <div class="d-flex form-group flex-column gap-1">
                    <label class="form-label fw-bold" for="edit-user-task-title">Title</label>
                    <InputText class="form-control" @bind-Value="_updateTaskUserModel.Title" />
                    <ValidationMessage For="(() => _updateTaskUserModel.Title)" />
                </div>
                <div class="d-flex form-group flex-column gap-1">
                    <label class="form-label fw-bold" for="edit-user-task-description">Description</label>
                    <InputTextArea class="form-control" @bind-Value="_updateTaskUserModel.Description" />
                    <ValidationMessage For="(() => _updateTaskUserModel.Description)" />
                </div>
                <div class="form-group d-flex flex-column gap-1">
                    <label class="form-label fw-bold" for="edit-user-task-proposed-completion-date">Proposed Completion Date</label>
                    <InputDate class="form-control" @bind-Value="_updateTaskUserModel.ProposedCompletionDate" />
                    <ValidationMessage For="(() => _updateTaskUserModel.ProposedCompletionDate)" />
                </div>
                <div class="d-flex flex-row justify-content-between">
                    @if (!_isSuccessful)
                    {
                        <button class="btn btn-secondary" type="button" disabled="@_isLoading" @onclick="(() => OnHandleClose(false))">
                            Cancel
                        </button>
                    }
                    @if (_isLoading)
                    {
                        <button class="btn btn-primary" type="button" disabled>
                            <span class="spinner-border spinner-border-sm" aria-hidden="true"></span>
                            <span role="status">Loading...</span>
                        </button>
                    }
                    else
                    {
                        if (!_isSuccessful)
                        {
                            <button class="btn btn-primary" type="submit">
                                Submit
                            </button>
                        }
                        else
                        {
                            <button class="btn btn-secondary float-end" type="button" @onclick="(() => OnHandleClose(true))">
                                Close
                            </button>
                        }
                    }
                </div>
            </div>
            
        </EditForm>
    </div>
}



@code {
    //Model Variables
    private EditContext _editContext;
    private UpdateTaskUserDto _updateTaskUserModel;
    private ValidationMessageStore _messageStore;

    //Task To Update Varibles
    private TaskUserDto _taskUserToUpdate;

    //Update Task Operation Variables
    private bool _isLoading = false;
    private bool _isSuccessful;
    private string _responseMessage;
    private int _loggedInUserId;

    //Parameters
    [Parameter, EditorRequired]
    public TaskUserDto UserTaskToUpdate { get; set; }

    [Parameter, EditorRequired]
    public EventCallback<bool> HandleClose { get; set; }

    //RENDER ACTIONS
    protected override async Task OnParametersSetAsync()
    {
        var authState = await authStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        _loggedInUserId = int.Parse(user.FindFirst(x => x.Type.EndsWith("serialnumber"))?.Value ?? "0");

        if(_loggedInUserId > 0)
        {
            _taskUserToUpdate = UserTaskToUpdate;
            _updateTaskUserModel = new UpdateTaskUserDto() { Id = _taskUserToUpdate.Id, Description = _taskUserToUpdate.Description, Title = _taskUserToUpdate.Title, ProposedCompletionDate = _taskUserToUpdate.ProposedCompletionDate.Date };
            _editContext = new EditContext(_updateTaskUserModel);
            _messageStore = new ValidationMessageStore(_editContext);

            _editContext.OnFieldChanged += (sender, args) =>
            {
                ValidateField(args.FieldIdentifier);
            };

            _editContext.OnValidationRequested += (sender, args) =>
           {
               _messageStore.Clear();
               ValidateAll();
               _editContext.NotifyValidationStateChanged();
           };
        }
    }

    //Handlers
    private async Task OnHandleClose(bool routeDecision)
    {
        _updateTaskUserModel = null;
        _editContext = null;
        _messageStore = null;
        _taskUserToUpdate = null;
        _isLoading = false;
        _isSuccessful = default;
        _responseMessage = null;
        await HandleClose.InvokeAsync(routeDecision);
    }

    //Handlers - Submit Action
    private async Task OnHandleSubmit()
    {
        _isLoading = true;
        // await Task.Delay(6000);
        // _isSuccessful = DateTime.Now.Second % 2 == 0;
        // _responseMessage = _isSuccessful ? "Successful" : "Failed";

        var response = await editUserTaskHandler.Handle(_updateTaskUserModel);
        _isSuccessful = response.isSuccessful; _responseMessage = response.responseMessage;

        _isLoading = false;
    }

    private void ValidateField(FieldIdentifier field)
    {
        _messageStore.Clear(field);

        if (field.FieldName == nameof(UpdateTaskUserDto.ProposedCompletionDate))
        {
            if (_updateTaskUserModel.ProposedCompletionDate <= DateTime.UtcNow.Date)
            {
                _messageStore.Add(field, "Proposed completion date must be in the future.");
            }
        }
    }

    private void ValidateAll()
    {
        // Example: validate date
        if (_updateTaskUserModel.ProposedCompletionDate <= DateTime.UtcNow.Date)
        {
            var field = new FieldIdentifier(_updateTaskUserModel, nameof(UpdateTaskUserDto.ProposedCompletionDate));
            _messageStore.Add(field, "Proposed completion date must be in the future.");
        }

    }
}
