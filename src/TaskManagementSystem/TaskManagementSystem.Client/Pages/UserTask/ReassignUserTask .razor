
@attribute [Authorize]

@using Entities.StaticValues

@if(_editContext is not null)
{
    <div class="d-flex flex-column gap-2">
        @if (_responseMessage is not null && !_isLoading)
        {
            <div class="alert fst-italic text-center fs-6 fw-bold alert-@(_isSuccessful ? "success" : "danger")" role="alert">
                @(_isSuccessful ? $"{_responseMessage}. Click Close button" : _responseMessage)
            </div>
        }
        <div class="d-flex flex-column gap-0">
            <label class="form-label fs-5 fw-bold">Title</label>
            <span class="text-dark fs-5">@_taskUserToReassign.Title</span>
        </div>
        <div class="d-flex flex-column gap-0">
            <label class="form-label fs-5 fw-bold">Description</label>
            <span class="text-dark fs-5">@_taskUserToReassign.Description</span>
        </div>
        <div class="d-flex flex-column gap-0">
            <label class="form-label fs-5 fw-bold">Current Assigned User</label>
            <span class="text-dark fs-5">@_taskUserToReassign.AssignedUser</span>
        </div>
        <div class="card-header mb-2">
            <div class="d-flex flex-column justify-content-start align-items-start">
                <label class="form-label fs-5 fw-bold">Status</label>
                <span class="badge px-3 py-2 w-100 rounded-pill text-center text-center @GetUserTaskStatusClass()">
                    @GetUserTaskStatus()
                </span>
            </div>
        </div>
        <div class="d-flex flex-column justify-content-start align-items-start gap-1">
            <label class="fw-bold fs-5 text-black">Expected Delivery Date</label>
            <span class="fs-6 text-wrap">
                @_taskUserToReassign.ProposedCompletionDate.ToString("dd MMM yyyy")
            </span>
        </div>
        <div class="d-flex w-100">
            @if(_unitMemebers.Any())
            {
                <EditForm class="w-100" EditContext="_editContext" OnValidSubmit="OnHandleSubmit">
                    <DataAnnotationsValidator />
                    <div class="d-flex flex-column gap-1">
                        <label class="form-label fw-bold">Reassign To</label>
                        <InputSelect class="form-select" @bind-Value="_reassignUserTaskModel.UserId">
                            <option value="0" selected></option>
                            @foreach(var user in _unitMemebers)
                            {
                                <option value="@user.Id">@user.FullName</option>
                            }
                        </InputSelect>
                        <ValidationMessage For="(() => _reassignUserTaskModel.UserId)" />
                    </div>
                    <div class="d-flex flex-column mb-2 gap-1">
                        <label class="fw-bold fs-5 form-label">Justification to Cancel</label>
                        <InputTextArea @bind-Value="_reassignUserTaskModel.Justification" class="form-control" />
                        <ValidationMessage For="(() => _reassignUserTaskModel.Justification)" />
                    </div>
                    <div class="d-flex flex-row justify-content-between align-items-center">
                        @if (!_isSuccessful)
                        {
                            <button class="btn btn-secondary" type="button" disabled="@_isLoading" @onclick="(() => OnHandleClose(false))">
                                Cancel
                            </button>
                        }
                        @if (_isLoading)
                        {
                            <button class="btn btn-primary" type="button" disabled>
                                <span class="spinner-border spinner-border-sm" aria-hidden="true"></span>
                                <span role="status">Loading...</span>
                            </button>
                        }
                        else
                        {
                            if (!_isSuccessful)
                            {
                                <button class="btn btn-primary" type="submit">
                                    Submit
                                </button>
                            }
                            else
                            {
                                <button class="btn btn-secondary float-end" type="button" @onclick="(() => OnHandleClose(true))">
                                    Close
                                </button>
                            }
                        }
                    </div>
                </EditForm>
            }
            else if(!_unitMemebers.Any())
            {
                <span class="fw-bold text-info fst-italic fs-6">
                    Could not fetch available users to reassign - @_fetchUnitMembersResponseMessage
                </span>
            }
        </div>

    </div>
}



@code {
    //Operation Variables
    private TaskUserDto _taskUserToReassign;
    private int _loggedInUserId;
    private bool _isLoading = false;
    private bool _isSuccessful;
    private string _responseMessage;
    private string _fetchUnitMembersResponseMessage;

    private IEnumerable<Shared.DataTransferObjects.User.UserSummaryDto> _unitMemebers;

    //CANCEL TASK MODELS
    private ReassignTaskUserDto _reassignUserTaskModel;
    private EditContext _editContext;

    //Parameters
    [Parameter, EditorRequired]
    public TaskUserDto TaskUserToReassign { get; set; }

    [Parameter, EditorRequired]
    public EventCallback<bool> HandleClose { get; set; }

    protected override async Task OnParametersSetAsync()
    {
        var authState = await authStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        _loggedInUserId = int.Parse(user.FindFirst(x => x.Type.EndsWith("serialnumber"))?.Value ?? "0");

        if(_loggedInUserId > 0)
        {

            _taskUserToReassign = TaskUserToReassign;

            await GetUnitMemebers();

            _reassignUserTaskModel = new ReassignTaskUserDto() { UserTaskId = _taskUserToReassign.Id, TaskId = _taskUserToReassign.TaskId };
            _editContext = new EditContext(_reassignUserTaskModel);
        }

    }

    private async Task OnHandleSubmit()
    {
        _isLoading = true;
        // await Task.Delay(5000);
        // _isSuccessful = DateTime.Now.Second % 2 == 0;
        // _responseMessage = _isSuccessful ? "Success" : "Failed";

        var response = await reassignUserTaskHandler.Handle(_reassignUserTaskModel);

        _isSuccessful = response.isSuccessful; _responseMessage = response.responseMessage;

        _isLoading = false;
    }

    private async Task OnHandleClose(bool routeDecision)
    {
        _taskUserToReassign = null;
        _isLoading = false;
        _isSuccessful = default;
        _responseMessage = null;
        _reassignUserTaskModel = null;
        _editContext = null;
        await HandleClose.InvokeAsync(routeDecision);
    }

    private string GetUserTaskStatus()
    {
        if (!string.IsNullOrEmpty(_taskUserToReassign.CancelReason))
        {
            return "Cancelled";
        }

        if (_taskUserToReassign.CompletionDate.HasValue)
        {
            return "Completed";
        }

        if (!_taskUserToReassign.CompletionDate.HasValue && _taskUserToReassign.ProposedCompletionDate.Date < DateTime.UtcNow.Date)
        {
            return $"Over Due {(DateTime.UtcNow.Date - _taskUserToReassign.ProposedCompletionDate.Date).TotalDays} day(s) ago";
        }

        if (!_taskUserToReassign.CompletionDate.HasValue && _taskUserToReassign.ProposedCompletionDate.Date == DateTime.UtcNow.Date)
        {
            return "Due Today.";
        }

        return "Pending";
    }

    private string GetUserTaskStatusClass()
    {
        if (!string.IsNullOrEmpty(_taskUserToReassign.CancelReason))
        {
            return "bg-danger text-white";
        }

        if (_taskUserToReassign.CompletionDate.HasValue)
        {
            return "bg-success-subtle text-success-emphasis";
        }

        if (!_taskUserToReassign.CompletionDate.HasValue && _taskUserToReassign.ProposedCompletionDate.Date < DateTime.UtcNow.Date)
        {
            return $"bg-danger-subtle text-danger-emphasis";
        }

        if (!_taskUserToReassign.CompletionDate.HasValue && _taskUserToReassign.ProposedCompletionDate.Date == DateTime.UtcNow.Date)
        {
            return "bg-warning-subtle text-warning-emphasis";
        }

        return "bg-primary-subtle text-primary-emphasis";
    }

    private async Task GetUnitMemebers()
    {
        var response = await getUnitMemberHandler.Handle(_taskUserToReassign.UserId);
        _unitMemebers = response.Data ?? []; _fetchUnitMembersResponseMessage = response.Message;
    }
}


