
@if(_editContext is not null)
{
    <div class="d-flex flex-column justofy-content-center">
        @if (_responseMessage is not null && !_isLoading)
        {
            <div class="alert fst-italic text-center fs-6 fw-bold alert-@(_isSuccessful ? "success" : "danger")" role="alert">
                @(_isSuccessful ? $"{_responseMessage}. Click Close button" : _responseMessage)
            </div>
        }
        <EditForm EditContext="_editContext" OnValidSubmit="HandleSubmit">
            <DataAnnotationsValidator />
            <div class="d-flex flex-column gap-2 justify-content-center w-100">
                <div class="w-100 d-flex flex-column justify-content-center">
                    <label class="fw-bold form-label">
                        Updated Status
                    </label>
                    <InputSelect class="form-select" @bind-Value="_updateCreatedTaskModel.Stage">
                        <option value="0" selected></option>
                        @foreach (var item in Enum.GetValues(typeof(Entities.StaticValues.Stage)))
                        {
                            if (!item.ToString().Equals(_taskToUpdateStatus.Stage, StringComparison.OrdinalIgnoreCase))
                            {
                                <option value="@item.ToString()">@item.ToString()</option>
                            }
                        }
                    </InputSelect>
                    <ValidationMessage For="(() => _updateCreatedTaskModel.Stage)" />
                </div>
                <div class="d-flex w-100 flex-column justify-content-center">
                    <label class="fw-bold form-label">Justification</label>
                    <InputTextArea @bind-Value="_updateCreatedTaskModel.Comment" class="form-control" row="3" />
                    <ValidationMessage For="(() => _updateCreatedTaskModel.Comment)" />
                </div>
                <div class="d-flex w-100 justify-content-@(_isLoading ? "end" : "between") mt-2">

                    @if (_isLoading)
                    {
                        <button class="btn btn-primary float-end" type="button" disabled>
                            <span class="spinner-border spinner-border-sm" aria-hidden="true"></span>
                            <span role="status">Loading...</span>
                        </button>
                    }
                    else
                    {
                        if (_responseMessage is null || (!_isSuccessful && _responseMessage is not null))
                        {
                            <button class="btn btn-outline-secondary float-start align-items-start" type="button" @onclick="(() => OnHandleClose(false))">Cancel</button>
                        }

                        if (_isSuccessful && _responseMessage is not null)
                        {
                            <button type="button" class="btn btn-secondary" @onclick="(() => OnHandleClose(true))">Close</button>
                        }
                        else
                        {
                            <button class="btn btn-primary" disabled="@(!string.IsNullOrEmpty(_taskToUpdateStatus.CancelReason))" type="submit">Submit Action</button>
                        }

                    }
                </div>
            </div>
        </EditForm>
    </div>
}

@code {
    private CreatedTaskDto _taskToUpdateStatus;

    //Mode Parameters
    private EditContext _editContext;
    private UpdateCreatedTaskStatusDto _updateCreatedTaskModel;
    private List<string> _validStatusToUpdate = [];

    //Operation Variables
    private bool _isLoading = false;
    private bool _isSuccessful;
    private string _responseMessage;

    [Parameter, EditorRequired]
    public CreatedTaskDto TaskToUpdateStatus { get; set; }

    [Parameter, EditorRequired]
    public EventCallback<bool> HandleClose { get; set; }

    protected override async Task OnParametersSetAsync()
    {
        await Task.Delay(250);
        if(TaskToUpdateStatus is not null)
        {
            _taskToUpdateStatus = TaskToUpdateStatus;
            _updateCreatedTaskModel = new UpdateCreatedTaskStatusDto() { Id = _taskToUpdateStatus.Id };
            _editContext = new EditContext(_updateCreatedTaskModel);
        }
    }

    private async Task HandleSubmit()
    {
        _isLoading = true;
        // await Task.Delay(5000);
        // _isSuccessful = DateTime.Now.Second % 2 == 0;
        // _responseMessage = _isSuccessful ? "Successful" : "Failed";

        var response = await updateCreatedTaskStatusHandler.Handle(_updateCreatedTaskModel);

        _responseMessage = response.responseMessage; _isSuccessful = response.isSuccessful;

        _isLoading = false;
    }

    private async Task OnHandleClose(bool refreshDecision = false)
    {
        _taskToUpdateStatus = null;
        _updateCreatedTaskModel = null;
        _editContext = null;
        _isLoading = false;
        _responseMessage = null;
        _isSuccessful = default;
        await HandleClose.InvokeAsync(refreshDecision);
    }
}
