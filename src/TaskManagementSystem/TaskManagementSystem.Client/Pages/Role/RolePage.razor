@page "/roles"
@attribute [Authorize(Roles = "ADMIN,ITGOVERNANCE")]

<PageTitle>Manage Roles</PageTitle>

<TaskManagementSystem.Client.SharedContent.LoadingSpinner IsVisible="@(!_isRendered)" />

@if(_isRendered)
{
    <div class="d-flex px-5 flex-row justify-content-between gap-5 align-items-center">
        <h3 class="text-primary bg-opacity-10">
            Manage Roles
        </h3>
        <div class="btn btn-primary" role="button" disabled="@true" @onclick="OnHandleAddRole">
            Add New Role
        </div>
    </div>
    <div class="container container-fluid container-xxl w-100">
        <div class="col-1 col-lg-1">
        </div>
        <div class="col-10 col-lg-10">
            <div class="d-flex justify-content-center align-items-center">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Role Name</th>
                            <th>Operations</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var role in _rolesToManage)
                        {
                            <tr>
                                <td>@role.RoleName</td>
                                <td>
                                    <div class="d-flex flex-row justify-content-between align-items-center">
                                        <button class="btn btn-danger" role="button" @onclick="(() => OnHandleDelete(role))">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                                                <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5M8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5m3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0" />
                                            </svg>
                                        </button>
                                @*
                                <button class="btn btn-primary" role="button" @onclick="(() => OnHandleEdit(unit))">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                                <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.5.5 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11z" />
                                </svg>
                                </button>
                                <button class="btn btn-info" role="button" @onclick="(() => OnHandleViewDetails(unit))">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-binoculars-fill" viewBox="0 0 16 16">
                                <path d="M4.5 1A1.5 1.5 0 0 0 3 2.5V3h4v-.5A1.5 1.5 0 0 0 5.5 1zM7 4v1h2V4h4v.882a.5.5 0 0 0 .276.447l.895.447A1.5 1.5 0 0 1 15 7.118V13H9v-1.5a.5.5 0 0 1 .146-.354l.854-.853V9.5a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5v.793l.854.853A.5.5 0 0 1 7 11.5V13H1V7.118a1.5 1.5 0 0 1 .83-1.342l.894-.447A.5.5 0 0 0 3 4.882V4zM1 14v.5A1.5 1.5 0 0 0 2.5 16h3A1.5 1.5 0 0 0 7 14.5V14zm8 0v.5a1.5 1.5 0 0 0 1.5 1.5h3a1.5 1.5 0 0 0 1.5-1.5V14zm4-11H9v-.5A1.5 1.5 0 0 1 10.5 1h1A1.5 1.5 0 0 1 13 2.5z" />
                                </svg>
                                </button>
                                *@
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-1 col-lg-1">
        </div>
    </div>
}



<TaskManagementSystem.Client.SharedContent.Popup @ref="popup" ShowCloseButton="false" Title="@_title">
    <Body>
        @if(_operationToPerform == OperationType.DeleteRole)
        {
            <DeleteRole RoleToDelete="_selectedRole" HandleClose="OnHandleClose" />
        }
        else if(_operationToPerform == OperationType.AddRole)
        {
            <AddRole HandleClose="OnHandleClose" />
        }
    </Body>
</TaskManagementSystem.Client.SharedContent.Popup>

@code {

    private IEnumerable<RoleDto> _rolesToManage = [];
    private bool _isRendered = false;

    private TaskManagementSystem.Client.SharedContent.Popup popup;

    private RoleDto _selectedRole;

    private string _title = "";
    private OperationType _operationToPerform;

    protected override async Task OnInitializedAsync()
    {

        await FetchAvailableRoles();

        _isRendered = true;
    }

    private async Task FetchAvailableRoles()
    {
        _rolesToManage = await getRolesHandler.Handle();
    }

    private void OnHandleDelete(RoleDto selectedRole)
    {
        _selectedRole = selectedRole;
        _operationToPerform = OperationType.DeleteRole;
        _title = $"Delete Role - {_selectedRole.RoleName}";
        popup.Open();
    }

    private async Task OnHandleClose(bool refreshDecision)
    {
        _operationToPerform = OperationType.None;
        _title = "";
        _selectedRole = null;
        popup.Close();

        if(refreshDecision)
        {
            await FetchAvailableRoles();
        }
    }

    private void OnHandleAddRole()
    {
        _title = "Add New Role";
        _operationToPerform = OperationType.AddRole;
        popup.Open();
    }
}

@code {
    enum OperationType
    {
        None,
        DeleteRole,
        AddRole
    }
}