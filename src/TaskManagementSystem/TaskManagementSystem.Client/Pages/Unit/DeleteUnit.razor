@attribute [Authorize]

@if(_unitToDelete is not null)
{
    <div class="d-flex flex-column justify-content-between w-100 p-3 gap-2">
        @if (_responseMessage is not null && !_isLoading)
        {
            <div class="alert w-100 fst-italic text-center fs-6 fw-bold alert-@(_isSuccessful ? "success" : "danger")" role="alert">
                @(_isSuccessful ? $"{_responseMessage} Click Close Button" : _responseMessage)
            </div>
        }
        <div class="d-flex flex-column gap-1">
            <label class="form-label fw-bold fs-5">Name</label>
            <span class="fst-normal fw-bolder fs-6">@_unitToDelete.Name</span>
        </div>
        <div class="d-flex flex-column gap-1">
            <label class="form-label fw-bold fs-5">Name</label>
            <span class="fst-normal fw-bolder fs-6">@_unitToDelete.UnitHeadName</span>
        </div>
        <div class="d-flex flex-row justify-content-between border-3">
            @if (!_isSuccessful)
            {
                <button class="btn btn-secondary" type="button" disabled="@_isLoading" @onclick="(() => OnHandleClose(false))">
                    Cancel
                </button>
            }
            @if (_isLoading)
            {
                <button class="btn btn-danger" type="button" disabled>
                    <span class="spinner-border spinner-border-sm" aria-hidden="true"></span>
                    <span role="status">Loading...</span>
                </button>
            }
            else
            {
                if (!_isSuccessful)
                {
                    <button class="btn btn-danger" type="button" @onclick="OnHandleDelete">
                        Submit
                    </button>
                }
                else
                {
                    <button class="btn btn-secondary float-end" type="button" @onclick="(() => OnHandleClose(true))">
                        Close
                    </button>
                }
            }
        </div>
    </div>
}

@code {
    //PARAMETER VARIABLES
    private UnitDto _unitToDelete;

    //OPERATION VARIABLES
    private bool _isLoading = false;
    private bool _isSuccessful;
    private string _responseMessage;

    [Parameter, EditorRequired]
    public UnitDto UnitToDelete { get; set; }

    [Parameter, EditorRequired]
    public EventCallback<bool> HandleClose { get; set; }

    protected override async Task OnParametersSetAsync()
    {
        await Task.Delay(100);
        _unitToDelete = UnitToDelete;
    }

    private async Task OnHandleClose(bool refreshDecision)
    {
        _isLoading = false;
        _isSuccessful = default;
        _responseMessage = null;
        _unitToDelete = null;
        await HandleClose.InvokeAsync(refreshDecision);
    }

    private async Task OnHandleDelete()
    {
        _isLoading = true;

        // await Task.Delay(5000);
        // _isSuccessful = DateTime.Now.Second % 2 == 0;
        // _responseMessage = _isSuccessful ? "Success" : "Failed";

        var response = await deleteUnitHandler.Handle(_unitToDelete.Id);
        _isSuccessful = response.isSuccessful; _responseMessage = response.responseMessage;

        _isLoading = false;
    }
}
