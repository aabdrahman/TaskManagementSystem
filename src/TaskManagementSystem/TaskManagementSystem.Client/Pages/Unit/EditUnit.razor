@attribute [Authorize]

@inject TaskManagementSystem.Client.Handlers.Authentication.GetUsersHandler getUsersHandler
 
@if(_editContext is not null)
{

    <div class="d-flex flex-column gap-2 w-100 justify-content-center align-items-center">
        @if (_responseMessage is not null && !_isLoading)
        {
            <div class="alert w-100 fst-italic text-center fs-6 fw-bold alert-@(_isSuccessful ? "success" : "danger")" role="alert">
                @(_isSuccessful ? $"{_responseMessage} Click Close Button" : _responseMessage)
            </div>
        }
        <EditForm EditContext="_editContext" OnValidSubmit="HandleSubmit" class="w-100">
            <DataAnnotationsValidator />
            <div class="d-flex flex-column gap-2 accordion-body-100">
                <div class="d-flex flex-column w-100 justify-content-start align-items-start gap-1">
                    <label class="form-label fw-bold">Name</label>
                    <InputText @bind-Value="_editUnitModel.Name" class="form-control" />
                    <ValidationMessage For="(() => _editUnitModel.Name)" />
                </div>
                @if (_users.Any())
                {
                    <div class="d-flex flex-column justify-content-start align-items-start w-100 gap-1">
                        <label class="fw-bold form-label">Unit Head Name</label>
                        <InputSelect class="form-select" @bind-Value="_editUnitModel.UnitHeadName">
                            @foreach (var user in _users)
                            {
                                <option value="@user.FullName">@user.FullName || @user.Email</option>
                            }
                        </InputSelect>
                        <ValidationMessage For="(() => _editUnitModel.UnitHeadName)" />
                    </div>
                }
                else if (!_users.Any())
                {
                    <p class="fw-bold text-danger fst-italic fs-6">
                        Users could not be fetched
                    </p>
                }
                <div class="d-flex flex-row justify-content-between">
                    @if (!_isSuccessful)
                    {
                        <button class="btn btn-secondary" type="button" disabled="@_isLoading" @onclick="(() => OnHandleClose(false))">
                            Cancel
                        </button>
                    }
                    @if (_isLoading)
                    {
                        <button class="btn btn-primary" type="button" disabled>
                            <span class="spinner-border spinner-border-sm" aria-hidden="true"></span>
                            <span role="status">Loading...</span>
                        </button>
                    }
                    else
                    {
                        if (!_isSuccessful)
                        {
                            <button class="btn btn-primary" type="submit">
                                Submit
                            </button>
                        }
                        else
                        {
                            <button class="btn btn-secondary float-end" type="button" disabled="@(!_users.Any())" @onclick="(() => OnHandleClose(true))">
                                Close
                            </button>
                        }
                    }
                </div>
            </div>
        </EditForm>
    </div>
}

@code {
    //MODEL VARIABLES
    private EditContext _editContext;
    private UpdateUnitDto _editUnitModel;

    //Parameter Variables
    private UnitDto _unitToEdit;
    private IEnumerable<Shared.DataTransferObjects.User.UserSummaryDto> _users;

    //Operation Variables
    private bool _isSuccessful;
    private bool _isLoading = false;
    private string _responseMessage;


    [Parameter, EditorRequired]
    public UnitDto UnitToEdit { get; set; }

    [Parameter, EditorRequired]
    public EventCallback<bool> HandleClose { get; set; }

    protected override async Task OnParametersSetAsync()
    {
        await Task.Delay(150);

        if(UnitToEdit is null)
        {
            return;
        }

        await GetUsers();
        _unitToEdit = UnitToEdit;
        _editUnitModel = new UpdateUnitDto() { UnitId = _unitToEdit.Id, Name = _unitToEdit.Name, UnitHeadName = _unitToEdit.UnitHeadName };
        _editContext = new EditContext(_editUnitModel);
    }

    private async Task GetUsers()
    {
        _users = await getUsersHandler.Handle();
    }

    private async Task OnHandleClose(bool refreshDecision)
    {
        _unitToEdit = null;
        _editUnitModel = null;
        _responseMessage = null;
        _isLoading = false;
        _isSuccessful = default;
        _users = default;
        await HandleClose.InvokeAsync(refreshDecision);
    }

    private async Task HandleSubmit()
    {
        _isLoading = true;

        // await Task.Delay(5000);
        // _isSuccessful = DateTime.Now.Second % 2 == 0;
        // _responseMessage = _isSuccessful ? "Success" : "Failed";

        var response = await editUnitHandler.Handle(_editUnitModel);
        _isSuccessful = response.isSuccessful; _responseMessage = response.responseMessage;

        _isLoading = false;
    }
}
