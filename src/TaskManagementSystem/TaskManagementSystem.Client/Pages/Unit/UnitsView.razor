
@if(_units is not null)
{
    if (!_units.Any() && _isInitialized)
    {
        <div class="no-trails" style="text-align:center;margin-top:100px;">
            <svg viewBox="0 0 16 16" class="bi bi-tree" fill="currentColor" xmlns="http://www.w3.org/2000/svg" style="width:200px;">
                <path fill-rule="evenodd" d="M8 0a.5.5 0 0 1 .416.223l3 4.5A.5.50 0 1 11 5.5h-.098l2.022 3.235a.5.5 0 0 1-.424.765h-.191l1.638 3.276a.5.50 0 1-.447.724h-11a.5.5 0 0 1-.447-.724L3.69 9.5H3.5a.5.5 0 01-.424-.765L5.098 5.5H5a.5.5 0 0 1-.416-.777l3-4.5A.5.5 0 0 1 8 0zM5.9344.5H6a.5.5 0 0 1 .424.765L4.402 8.5H4.5a.5.5 0 0 1 .447.724L3.3112.5h9.382l-1.638-3.276A.5.5 0 0 1 11.5 8.5h.098L9.576 5.265A.5.5 0 0 110 4.5h.066L8 1.401 5.934 4.5z" />
                <path d="M7 13.5h2V16H7v-2.5z" />
            </svg>
            <h3 class="text-muted fw-light">
                No Units
            </h3>
        </div>
    }
    else if (_isInitialized && _units.Any())
    {
        <table class="table table-striped w-100">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Unit Head Name</th>
                    <th>Operation</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var unit in _units)
                {
                    <tr>
                        <td>@unit.Name</td>
                        <td>@unit.UnitHeadName</td>
                        <td>
                            <div class="d-flex flex-row justify-content-between align-items-center">
                                <button class="btn btn-danger" role="button" @onclick="(() => OnHandleDelete(unit))">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                                        <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5M8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5m3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0" />
                                    </svg>
                                </button>
                                <button class="btn btn-primary" role="button" @onclick="(() => OnHandleEdit(unit))">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                                        <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.5.5 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11z" />
                                    </svg>
                                </button>
                                <button class="btn btn-info" role="button" @onclick="(() => OnHandleViewDetails(unit))">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-binoculars-fill" viewBox="0 0 16 16">
                                        <path d="M4.5 1A1.5 1.5 0 0 0 3 2.5V3h4v-.5A1.5 1.5 0 0 0 5.5 1zM7 4v1h2V4h4v.882a.5.5 0 0 0 .276.447l.895.447A1.5 1.5 0 0 1 15 7.118V13H9v-1.5a.5.5 0 0 1 .146-.354l.854-.853V9.5a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5v.793l.854.853A.5.5 0 0 1 7 11.5V13H1V7.118a1.5 1.5 0 0 1 .83-1.342l.894-.447A.5.5 0 0 0 3 4.882V4zM1 14v.5A1.5 1.5 0 0 0 2.5 16h3A1.5 1.5 0 0 0 7 14.5V14zm8 0v.5a1.5 1.5 0 0 0 1.5 1.5h3a1.5 1.5 0 0 0 1.5-1.5V14zm4-11H9v-.5A1.5 1.5 0 0 1 10.5 1h1A1.5 1.5 0 0 1 13 2.5z" />
                                    </svg>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
}

@code {
    private IEnumerable<UnitDto> _units;
    private bool _isInitialized = false;    

    [Parameter, EditorRequired]
    public IEnumerable<UnitDto> Units { get; set; }

    [Parameter, EditorRequired]
    public EventCallback<UnitDto> HandleEdit { get; set; }
    [Parameter, EditorRequired]
    public EventCallback<UnitDto> HandleDelete { get; set; }
    [Parameter, EditorRequired]
    public EventCallback<UnitDto> HandleViewDetails { get; set; }

    protected override async Task OnParametersSetAsync()
    {
        await Task.Delay(250);
        _units = Units;
        _isInitialized = true;
    }

    private async Task OnHandleViewDetails(UnitDto selectedUnit)
    {
        await HandleViewDetails.InvokeAsync(selectedUnit);
    }

    private async Task OnHandleDelete(UnitDto selectedUnit)
    {
        await HandleDelete.InvokeAsync(selectedUnit);
    }

    private async Task OnHandleEdit(UnitDto selectedUnit)
    {
        await HandleEdit.InvokeAsync(selectedUnit);
    }
}
